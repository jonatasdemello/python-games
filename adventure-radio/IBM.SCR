An example for an IBM Screen:


1000 LOCATE 1,1:PRINT ROOM$;SPACE$(80-POS(0));
1010 PRINT"VISABLE OBJECTS: ";:Z=0
1020 FOR X=1 TO OBJECTS:IF L(X)<>L THEN 1060
1030 IF Z<>0 THEN PRINT", ";
1040 IF POS(0)+LEN(OBJECT$(X))+3>79 THEN PRINT SPACE$(80-POS(0));
1050 PRINT OBJECT$(X);SPACE$(80-POS(0));
1060 NEXT:IF Z=0 THEN PRINT"NOTHING";SPACE$(80-POS(0));
1070 PRINT"OBVIOUS EXITS: ";:FOR X=1 TO 6:IF D(L,X)=0 THEN 1090
1080 IF D(L,1)<>0 THEN PRINT"NORTH ";
1081 IF D(L,2)<>0 THEN PRINT"EAST ";
1082 IF D(L,3)<>0 THEN PRINT"SOUTH ";
1083 IF D(L,4)<>0 THEN PRINT"WEST ";
1084 IF D(L,5)<>0 THEN PRINT"UP ";
1085 IF D(L,6)<>0 THEN PRINT"DOWN ";
1090 NEXT:PRINT SPACE$(80-POS(0));:PRINT STRING$(79,"-");
1100 LOCATE 24,1:INPUT"WHAT WOULD YOU LIKE TO DO";AN$
